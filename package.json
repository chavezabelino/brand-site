{
  "name": "nino-chavez-|-portfolio",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "npm run build && node scripts/bundle-analyzer.js",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:traditional": "vitest --config vitest-parallel.config.ts --mode traditional",
    "test:canvas": "vitest --config vitest-parallel.config.ts --mode canvas",
    "test:parallel": "npm run test:traditional & npm run test:canvas",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:canvas": "playwright test tests/e2e/canvas-layout.spec.ts",
    "test:e2e:cross-browser": "playwright test tests/e2e/cross-browser.spec.ts",
    "test:all": "npm run test:run && npm run test:e2e",
    "test:migration": "npm run test:traditional && npm run test:canvas && npm run test:e2e:canvas"
  },
  "dependencies": {
    "color2k": "^2.0.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@playwright/test": "^1.55.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.13",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.14.0",
    "@types/stats.js": "^0.17.4",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "jest-axe": "^10.0.0",
    "jsdom": "^27.0.0",
    "playwright": "^1.55.1",
    "postcss": "^8.5.6",
    "stats.js": "^0.17.0",
    "tailwindcss": "^4.1.13",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vitest": "^3.2.4"
  }
}
